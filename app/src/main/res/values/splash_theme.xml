<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lightYellow</item>
        <item name="postSplashScreenTheme">@style/Theme.Pokemon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/lightYellow</item>
        <item name="android:navigationBarColor">@color/lightYellow</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- API 31+ specific attributes -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/pokeball_anim</item>
    </style>
</resources>